<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingTop="55dp">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mock Remote Notification"
        android:enabled="true"
        android:id="@+id/mockRemoteNotificationButton"/>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mock Local Notification"
        android:enabled="true"
        android:id="@+id/mockLocalNotificationButton"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Local Not. Current Campaign"
        android:enabled="true"
        android:id="@+id/mockLocalNotificationCurrentCampaignButton"/>


</LinearLayout>